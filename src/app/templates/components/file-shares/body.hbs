{{#promise-proxy-container proxy=sharesProxy}}
  {{#if sortedShares.length}}
    {{#each sortedShares as |share|}}
      {{file-shares/item
        share=share
        getShareUrl=(action "getShareUrl")
      }}
    {{/each}}
  {{else}}
    {{#content-info
      class="scroll-breakpoint-400 fill-flex-using-column content-info-no-shares"
      header=(tt this "noShares.header" fileType=fileTypeText)
      buttonAction=(action "createShare")
      buttonLabel=(tt this "noShares.buttonCreateShare")
      buttonClass="create-share-btn"
      buttonDisabled=isCreateShareDisabled
      buttonTip=createShareDisabledTip
    }}
      {{file-shares/other-view-forbidden-warning file=file aboutTimeType="future"}}
    {{/content-info}}
  {{/if}}
{{/promise-proxy-container}}