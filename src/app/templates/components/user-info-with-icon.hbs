{{#truncated-string
  mouseEnter=(action "changeIconHover" true)
  mouseLeave=(action "changeIconHover" false)
}}
  <span
    class={{concat-classes
      "inline-icon-container user-info-trigger"
      (if userInfoOpened "not-animation" "animation")
    }}
    {{action
      (mut userInfoOpened)
      (not userInfoOpened)
      bubbles=false
    }}
  >
    {{one-icon icon="user" color=iconColor}}
    {{one-icon icon="browser-info"}}
  </span>
  <span class="file-owner-fullname">{{or owner.fullName "â€”"}}</span>
  {{#if owner.username}}
    <span class="file-owner-username">
      ({{owner.username}})
    </span>
  {{/if}}
  {{#render-later triggerRender=userInfoOpened}}
    {{#one-webui-popover
      popoverStyle="user-info"
      open=userInfoOpened
      triggerSelector=(concat "#" elementId " .user-info-trigger")
      as |popover|
    }}
      {{#click-outside
        onClickOutside=(action (mut userInfoOpened) false)
        exceptSelector=".user-info-trigger, .webui-popover-user-info"
      }}
        {{user-info-content
          class="form-group without-margin"
          owner=owner
        }}
      {{/click-outside}}
    {{/one-webui-popover}}
  {{/render-later}}
{{/truncated-string}}


