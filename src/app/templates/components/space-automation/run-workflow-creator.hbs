{{#one-carousel activeSlideId=activeSlide as |carousel|}}
  {{#carousel.slide slideId="list"}}
    {{#promise-proxy-container proxy=userProxy}}
      <h1 class="slide-header">{{tt this "slides.list.header"}}</h1>
      <div class="row loadable-row">
        {{space-automation/atm-workflow-schemas-list
          user=user
          onAtmWorkflowSchemaSelect=(action "atmWorkflowSchemaSelected")
        }}
      </div>
    {{/promise-proxy-container}}
  {{/carousel.slide}}
  {{#carousel.slide slideId="inputStores"}}
    <h1 class="slide-header">
      {{tt this "slides.inputStores.header"
        atmWorkflowSchemaName=selectedAtmWorkflowSchema.name
      }}
    </h1>
    <div class="form-container">
      {{#if areInitialValuesNeeded}}
        {{space-automation/input-stores-form
          atmWorkflowSchema=selectedAtmWorkflowSchema
          space=space
          onChange=(action "inputStoresChanged")
          isDisabled=isStartingWorkflow
          class="row loadable-row"
        }}
      {{else}}
        <div class="nothing-to-provide-message">
          {{one-icon icon="checkbox-filled"}}
          {{tt this "slides.inputStores.nothingToProvideMessage"}}
        </div>
      {{/if}}
      <div class="btn-toolbar footer-buttons">
        {{#bs-button
          class="btn-back"
          disabled=isStartingWorkflow
          onClick=(action "backSlide")
        }}
          {{one-icon icon="arrow-left" class="hidden-custom-xs"}}
          <span class="text">
            {{tt this "slides.inputStores.backBtn"}}
          </span>
        {{/bs-button}}
        {{#one-spin-button
          class="btn btn-primary btn-submit"
          action=(action "runWorkflow")
          disabled=(not areInputStoresValid)
        }}
          {{tt this "slides.inputStores.runWorkflowBtn"}}
        {{/one-spin-button}}
      </div>
    </div>
  {{/carousel.slide}}
{{/one-carousel}}
{{yield}}
