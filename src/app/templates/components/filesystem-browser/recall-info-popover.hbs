{{#render-later triggerRender=opened}}
  {{#one-webui-popover
    popoverStyle=(concat-classes
      "recalling"
      "webui-popover-unlimited-width"
      (if isInModal "over-modals")
    )
    popoverTrigger="manual"
    triggerSelector=triggerSelector
    open=opened
    onToggle=(action "changeOpened")
  }}
    {{#click-outside
      action=(action "changeOpened" false)
      except-selector=triggerSelector
    }}
      {{#filesystem-browser/recall-info
        class="recalling-popover-content"
        file=file
      }}
        {{yield}}
      {{/filesystem-browser/recall-info}}
    {{/click-outside}}
  {{/one-webui-popover}}
{{/render-later}}