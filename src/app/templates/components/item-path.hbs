<div class="path-container">
  {{#if isLoading}}
    <span class="path-loading">{{tt this "loading"}}</span>
  {{else if isError}}
    <span class="path-error">
      <span class="text-danger">{{tt this "error"}}</span>
    </span>
  {{else}}
    <a
      class={{concat-classes "path" anchorClassname}}
      href={{href}}
      target={{target}}
      onclick={{onLinkClicked}}
      onkeydown={{onLinkKeydown}}
    >
      {{#each displayedItems as |item|}}
        {{#if item.separator}}
          <div class="path-item path-separator">{{item.separator}}</div>
        {{/if}}
        {{#if item.icon}}
          <div class="path-item path-icon-container">
            {{one-icon icon=item.icon class="path-icon"}}
          </div>
        {{/if}}
        <div class="path-item path-label">{{item.record.name}}</div>
      {{/each}}
    </a>
    {{#if renderTooltip}}
      {{one-tooltip
        class="string-path-tooltip"
        title=stringifiedPath
      }}
    {{/if}}
  {{/if}}
</div>


{{!--
  An UGLY hack to make names observer work, because getting the property in init does
  not activate "allNames" observers.
--}}
<div class="path-names-observer-hack" style="display: none;">
  {{allNames}}
</div>