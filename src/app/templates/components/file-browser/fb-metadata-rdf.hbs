<div class="form-group full-height {{if isValid "has-success" "has-error"}}">
  {{ember-ace
    class="ember-ace-rdf-metadata ember-ace-metadata-in-modal"
    editorClass="full-height"
    value=metadataForEditor
    ready=(action "aceEditorReady")
    update=(action "metadataChanged")
    worker="ace/mode/xml_worker"
    mode="ace/mode/xml"
    theme="ace/theme/textmate"
    tabSize=2
    useWrapMode=true
    highlightActiveLine=true
    showLineNumbers=true
    showPrintMargin=false
    readOnly=previewMode
  }}
  {{#unless isValid}}
    <div class="form-message text-right">{{tt this "invalidXml"}}</div>
  {{/unless}}
</div>
