<p class="description">{{descriptionText}}</p>
<div class="visualization-container">
  <div class="source-oneprovider-visualization">
    {{one-icon icon="provider" class="oneprovider-icon"}}
    <div class="oneprovider-name">{{sourceOneprovider.name}}</div>
  </div>
  {{#one-arrow direction=(if media.isMobile "down" "right") arrowText=(tt this "migrationArrowText")}}
    <div class="transfer-animation-positioner">
      <div class="transfer-animation-container">
        <div class="wind-container">
          <div class="wind-element"></div>
          <div class="wind-element"></div>
          <div class="wind-element"></div>
        </div>
        {{one-icon class="file-icon" icon="browser-file"}}
      </div>
    </div>
  {{/one-arrow}}
  {{#power-select
    triggerClass="small target-oneprovider-selector"
    dropdownClass="small target-oneprovider-dropdown"
    placeholder=(tt this "selectTargetDropdownPlaceholder")
    disabled=(not canSelectOneprovider)
    options=oneprovidersDropdownOptions
    selected=destinationOneproviderItem
    onchange=(action "selectOneprovider")
    searchField="name"
    searchEnabled=true
    as |item|}}
    {{#truncated-string}}
      <div class="inline-icon-container">
        {{one-icon icon="provider"}}
      </div>
      <span class="oneprovider-name">{{item.text}}</span>
    {{/truncated-string}}
  {{/power-select}}
</div>
<div class="btn-toolbar">
  {{#bs-button onClick=onCancel disabled=(not canCancel) size="sm"}}
    {{tt this "cancelButton"}}
  {{/bs-button}}
  {{#one-spin-button action=(action "migrate") class="btn btn-primary btn-sm start-migration" disabled=(not canMigrate)}}
    {{tt this "migrateButton"}}
  {{/one-spin-button}}
</div>
{{yield}}
