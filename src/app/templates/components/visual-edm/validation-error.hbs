<div class="edm-info-row-inner">
  <OneIcon @icon="sign-warning-rounded" class="edm-info-row-icon" />
  <span class="edm-info-row-text">
    <strong>{{text}}{{if (or errorMessages.length customMessage) ":" "."}}</strong>
    {{#if customMessage}}
      {{customMessage}}.
    {{else}}
      {{#each errorMessages as |message index|}}
        <span>{{message}}</span>{{if (eq index (sub errorMessages.length 1)) "." ";"}}
      {{/each}}
    {{/if}}
  </span>
</div>