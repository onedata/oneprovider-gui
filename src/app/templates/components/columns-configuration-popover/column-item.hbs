{{#one-draggable-object
  content=this
  dragStartHook=(action "dragStartAction")
  dragEndHook=(action "dragEndAction")
}}
  {{one-icon icon="drag" class="column-move-icon"}}
  {{one-checkbox
    inputId=checkboxInputId
    checked=(get columnValue "isEnabled")
    update=(action "checkboxChanged" columnName)
    class=(concat-classes
      "filter-column-checkbox"
      (concat columnName "-checkbox")
    )
  }}
  <label
    for={{checkboxInputId}}
    class="column-name-label"
  >
    <span class="one-label checkbox-label">
      <span class="name-text">
        {{tt this (concat translationKey ".name." columnName)}}
      </span>
      {{#if columnValue.hasSubname}}
        <span class="subname-text">
          &nbsp;({{tt this (concat translationKey ".subname." columnName)}})
        </span>
      {{/if}}
      {{#if columnValue.hasTooltip}}
        {{#one-icon icon="browser-info" class="column-info-icon"}}
          {{one-tooltip
            title=(tt this
              (concat translationKey ".tip." columnName)
              oneprovider=currentProviderName
            )
          }}
        {{/one-icon}}
      {{/if}}
      {{#if (and
        (not (get columnValue "isVisible"))
        (get columnValue "isEnabled")
      )}}
        {{#one-icon icon="no-view"}}
          {{one-tooltip title=(tt this "noViewTip")}}
        {{/one-icon}}
      {{/if}}
    </span>
  </label>
  <div class="arrows-container">
    <span
      class="move-down-button"
      onClick={{action "moveColumnDown" columnName}}
    >
      {{one-icon
        icon="move-down"
        class=(if isMoveDownIconDisabled "disabled-icon")
      }}
      {{#if (and (not isMoveDownIconDisabled) isArrowTooltipVisible)}}
        {{one-tooltip title=(tt this "moveDown")}}
      {{/if}}
    </span>
    <span
      class="move-up-button"
      onClick={{action "moveColumnUp" columnName}}
    >
      {{one-icon
        icon="move-up"
        class=(if isMoveUpIconDisabled "disabled-icon")
      }}
      {{#if (and (not isMoveUpIconDisabled) isArrowTooltipVisible)}}
        {{one-tooltip title=(tt this "moveUp")}}
      {{/if}}
    </span>
  </div>
{{/one-draggable-object}}