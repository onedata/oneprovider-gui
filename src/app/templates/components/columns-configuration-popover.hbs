{{#render-later triggerRender=isOpened}}
  {{#one-webui-popover
    popoverStyle="columns-configuration"
    open=isOpened
    triggerSelector=triggerSelector
    as |popover|
  }}
    {{#click-outside
      onClickOutside=(action (mut isOpened) false)
      exceptSelector=triggerSelector
    }}
      <ul class="columns-list">
        {{#each-in browserModel.columns as |columnName columnSpec|}}
          <li class="column">
            {{one-checkbox
              inputId=(concat elementId columnName "Checkbox")
              checked=columnSpec.isEnabled
              update=(action "checkboxChanged" columnName)
              isReadOnly=false
              class="filter-column-checkbox"
            }}
            <label for={{concat elementId columnName "Checkbox"}}>
              <span
                class={{concat-classes
                  "one-label checkbox-label"
                  (if (or columnSpec.isVisible (not columnSpec.isEnabled)) "end-line-space")
                }}
              >
                {{tt this columnName}}
              </span>
            </label>
            {{#if (and (not columnSpec.isVisible) columnSpec.isEnabled)}}
              {{#one-icon icon="no-view"}}
                {{one-tooltip title=(tt this "noViewTip")}}
              {{/one-icon}}
            {{/if}}
           </li>
        {{/each-in}}
      </ul>
    {{/click-outside}}
  {{/one-webui-popover}}
{{/render-later}}
