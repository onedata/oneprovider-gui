{{#one-modal
  id=modalId
  class="archive-recall-modal modal-content-overlay"
  open=open
  size="xl"
  backdropClose=true
  keyboard=true
  onHide=(action "hide")
  as |modal|
}}
  {{archive-recall
    modal=modal
    modalId=modalId
    space=space
    archive=archive
    options=options
    onCancel=(action "hide")
    onArchiveRecallStarted=(action "recallStarted")
  }}
  {{yield}}
{{/one-modal}}
