<tr class="oneprovider-name-row">
  <td colspan="2" class="oneprovider-name-cell">
    {{#truncated-string}}
      {{record-info-with-icon
        record=oneprovider
      }}
    {{/truncated-string}}
  </td>
</tr>
{{#each locations as |location|}}
  <tr class="oneprovider-storage-location-row">
    <td class="storage-name-cell">
      {{#truncated-string}}
        {{location.storageName}}
      {{/truncated-string}}
    </td>
    <td class="location-cell">
      {{#if location.path}}
        {{clipboard-line
          value=location.path
          size="sm"
          class="location-cell-clipboard"
        }}
      {{else}}
        <span class="empty-location-cell">â€“</span>
      {{/if}}
    </td>
  </tr>
{{/each}}
