<div class="icon-col">
  {{one-icon class="file-type-icon" icon=icon}}
</div>
<div class="content-col">
  {{#truncated-string class="file-name"}}{{file.name}}{{/truncated-string}}
  <small class="file-path">
    <span class="file-path-label">{{tt this "pathLabel"}}:</span>
    {{#if file}}
      {{item-path
        class="anchor-container"
        item=file
        target=navigateLinkTarget
        onLinkClicked=(action "linkClicked")
      }}
    {{else}}
      <em>{{tt this "unknownPath"}}</em>
    {{/if}}
  </small>
</div>
