{{#global-modal
  classNames="modal-content-overlay"
  modalId=modalId
  size="xl"
  as |modal|
}}

  {{#modal.header}}
    <h1>
      <span class="one-label">{{tt this "header"}}</span>
    </h1>
  {{/modal.header}}

  {{#modal.body}}
    content
    {{log atmWorkflowInputData}}
  {{/modal.body}}

  {{#modal.footer class="btn-toolbar"}}
    {{#bs-button
      type="default"
      class="btn-cancel"
      onClick=modal.close
    }}
      {{tt this "cancelBtn"}}
    {{/bs-button}}
  {{/modal.footer}}

{{/global-modal}}
