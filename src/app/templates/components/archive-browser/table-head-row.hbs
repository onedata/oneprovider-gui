<th class="fb-table-col-archives">{{tt this "archives"}}</th>
{{#each columnsConfiguration.columnsOrder as |columnName|}}
  {{#if (get columnsConfiguration (concat "columns." columnName ".isVisible"))}}
    <th
      class={{concat "fb-table-col-" columnName " fb-table-secondary-col hidden-xs"}}
      style={{get columnsConfiguration (concat "columnsStyle." columnName)}}
    >
      {{tt this columnName}}
    </th>
  {{/if}}
{{/each}}
{{columns-configuration-cell
  columnsConfiguration=columnsConfiguration
}}