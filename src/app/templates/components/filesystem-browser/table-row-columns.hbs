{{#if browserModel.columns.size.isVisible}}
  <td class={{concat
      "fb-table-col-size hidden-xs "
      (if file.effFile.isShowProgress "multiline")
    }}
    style={{browserModel.columnsStyle.size}}
  >
    <span class="file-item-text">
      {{#if (eq file.effFile.type "file")}}
        {{#if (or file.effFile.isShowProgress (not file.effFile.isPollingSize))}}
          <span class="{{if file.effFile.isShowProgress "infinite animated pulse-mint"}}">
            {{bytes-to-string file.effFile.size}}
          </span>
          {{#if file.effFile.isShowProgress}}
            <br>
            <span class="small">
              {{tt this file.effFile.currentOperation}}
            </span>
          {{/if}}
        {{else}}
          {{spin-spinner-block sizeClass="xs" class="absolute-middle-centered"}}
        {{/if}}
      {{else if (or previewMode (eq file.type "symlink"))}}
        {{#if (not-eq file.effFile.size null)}}
          {{bytes-to-string file.effFile.size}}
        {{else}}
          —
        {{/if}}
      {{else}}
        <div
          class={{concat-classes
            "dir-size-container"
            "active"
          }}
          onclick={{action "invokeFileAction" file "info" "size"}}
        >
          <span class="dir-size-value">
            {{#if (not-eq file.effFile.size null)}}
              {{bytes-to-string file.effFile.size}}
            {{else}}
              —
            {{/if}}
          </span>
          {{one-icon
            icon="overview"
            class="inline-icon-container"
          }}
        </div>
        {{#if tooltipText}}
          {{one-tooltip
            title=tooltipText
          }}
        {{/if}}
      {{/if}}
    </span>
  </td>
{{/if}}
{{#if browserModel.columns.modification.isVisible}}
  <td
    class="fb-table-col-modification hidden-xs"
    style={{browserModel.columnsStyle.modification}}
  >
    <span class="file-item-text">
      {{date-format file.effFile.modificationTime format="dateWithMinutes" blank="—"}}
    </span>
  </td>
{{/if}}
{{#if (and browserModel.isOwnerVisible browserModel.columns.owner.isVisible)}}
  <td class="fb-table-col-owner multiline" style={{browserModel.columnsStyle.owner}}>
    <span class="file-item-text">
      {{filesystem-browser/table-cell-owner-info
        owner=owner
        errorReason=errorReasonForOwnerProxy
      }}
    </span>
  </td>
{{/if}}
