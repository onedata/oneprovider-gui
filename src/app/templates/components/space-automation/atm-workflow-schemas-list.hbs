{{#promise-proxy-container proxy=dataLoadingProxy}}
  {{#each sortedAtmWorkflowSchemas as |atmWorkflowSchema|}}
    {{space-automation/atm-workflow-schemas-list/list-entry
      atmWorkflowSchema=atmWorkflowSchema
      onSelect=(action "atmWorkflowSchemaSelected" atmWorkflowSchema)
    }}
  {{else}}
    <div class="no-workflows-info">
      {{one-icon icon="checkbox-filled-x"}}
      {{tt this "noWorkflows"}}
    </div>
  {{/each}}
{{/promise-proxy-container}}
{{yield}}
