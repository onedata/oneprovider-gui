{{#if isSingleItem}}
  {{single-file-info class="single-item" file=firstItem}}
{{else}}
  <div class="row row-items-list">
    {{#each items as |item|}}
      <div class="row-item">
        <div class="browsable-item-icon">
          {{one-icon icon="browser-archive"}}
        </div>
        {{#truncated-string class="sinble-browsable-item-name"}}
          {{item.name}}
        {{/truncated-string}}
        {{#one-label-tip
          tooltipClass="browsable-items-info-tooltip"
          class="item-info-tip-trigger"
          icon="sign-info-rounded"
        }}
          <div class="text-left">
            <span class="item-info-label">
              {{tt this "archived"}}:
            </span>
            <span class="item-info-value archive-size">
              {{tt this "archivedValue"
                filesCount=(or item.stats.filesArchived 0)
                size=(or (bytes-to-string item.stats.bytesArchived) 0)
              }}
            </span>
          </div>
        {{/one-label-tip}}
      </div>
    {{/each}}
  </div>
{{/if}}
{{!-- FIXME: should this going to be generic? --}}
{{#if (and canViewShares sharesToRemoveCount)}}
  <p class="shares-info text-danger">
    {{sharesCountInfo}}<br/>
    {{removingSharesInfo}}
  </p>
{{/if}}