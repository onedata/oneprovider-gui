{{#render-later triggerRender=isOpened}}
  {{#one-webui-popover
    popoverStyle="user-info"
    open=isOpened
    triggerSelector=triggerSelector
    as |popover|
  }}
    {{#click-outside
      onClickOutside=(action (mut isOpened) false)
      exceptSelector=triggerSelector
    }}
      <h1 class="popup-title">
        <span class="one-label">
          {{tt this "title"}}
        </span>
      </h1>
      <table class="table table-condensed table-info">
        <tr class="row-with-text">
          <td class="property-name">{{tt this "fullName"}}</td>
          <td class="property-value">{{or user.fullName "—"}}</td>
        </tr>
        <tr class="row-with-text">
          <td class="property-name">{{tt this "username"}}</td>
          <td class="property-value">{{or user.username "—"}}</td>
        </tr>
        <tr class="row-with-input">
          <td class="property-name">{{tt this "userId"}}</td>
          <td class="property-value">
            {{one-clipboard-line
              size="sm"
              value=user.entityId
              showText=false
              btnType="success"
            }}
          </td>
        </tr>
      </table>
    {{/click-outside}}
  {{/one-webui-popover}}
{{/render-later}}
