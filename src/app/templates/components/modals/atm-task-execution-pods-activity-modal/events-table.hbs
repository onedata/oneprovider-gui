{{#loading-container isLoading=eventsEntries.isLoading sizeClass="sm"}}
  <table class="table one-infinite-list">
    {{#if storeEntries.length}}
      {{modals/atm-task-execution-pods-activity-modal/events-table/header-row}}
    {{/if}}
    <tr class="first-row">
      <td colspan="4" style={{firstRowStyle}}></td>
    </tr>
    <div class="table-start-row"></div>
    {{#unless eventsEntries.length}}
      <tr class="table-is-empty-row">
        <td class="table-is-empty-cell" colspan="4">
          {{tt this "noEvents"}}
        </td>
      </tr>
    {{else}}
      {{#if (and storeEntries.initialLoad.isSettled fetchingPrev)}}
        <tr class="loading-row">
          <td colspan="4" class="loading-row-cell">
            {{spin-spinner-block
              sizeClass="xs"
              class="absolute-middle-centered"
            }}
          </td>
        </tr>
      {{/if}}
      {{#each eventsEntries key="index" as |eventEntry|}}
        {{modals/atm-task-execution-pods-activity-modal/events-table/event-row
          eventData=eventEntry.value
          rowIndex=eventEntry.index
        }}
      {{/each}}
      {{#if (and storeEntries.initialLoad.isSettled fetchingNext)}}
        <tr class="loading-row">
          <td colspan="4" class="loading-row-cell">
            {{spin-spinner-block
              sizeClass="xs"
              class="absolute-middle-centered"
            }}
          </td>
        </tr>
      {{/if}}
    {{/unless}}
  </table>
{{/loading-container}}
