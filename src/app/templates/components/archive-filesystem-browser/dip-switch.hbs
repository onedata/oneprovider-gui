{{#bs-button-group
  value=archiveDipMode
  class="dip-switch"
  type="radio"
  onChange=(action onArchiveDipModeChange) as |bg|
}}
  <div class="btn-group" role="group">
    {{#bg.button
      type="default"
      disabled=disabled
      class="btn-sm select-archive-aip-btn"
      value="aip"
    }}
      {{tt this "aip"}}
    {{/bg.button}}
  </div>
  <div class="btn-group" role="group">
    {{#bg.button
      type="default"
      disabled=disabled
      class="btn-sm select-archive-dip-btn"
      value="dip"
    }}
      {{tt this "dip"}}
    {{/bg.button}}
  </div>
{{/bs-button-group}}