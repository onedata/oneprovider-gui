<th class="fb-table-col-files">
  <div class="fb-table-first-col-container">
    <div class="table-header-text">{{tt this "files"}}</div>
    {{#if renderArchiveDipSwitch}}
      {{archive-dip-switch
        disabled=(not isArchiveDipAvailable)
        archiveDipMode=archiveDipMode
        onArchiveDipModeChange=onArchiveDipModeChange
      }}
    {{/if}}
    <div class="spacer"></div>
    <div class="table-header-status-bar">{{yield}}</div>
  </div>
</th>
{{#each browserModel.columnsOrder as |columnName|}}
  {{#if (get browserModel (concat "columns." columnName ".isVisible"))}}
    <th
      class={{concat "fb-table-col-" columnName " fb-table-secondary-col hidden-xs"}}
      style={{get browserModel (concat "columnsStyle." columnName)}}
    >
      {{tt this columnName}}
    </th>
  {{/if}}
{{/each}}
{{columns-configuration-cell
  columnsConfiguration=browserModel
}}