<div class="flex-vertical-center">
  {{#if fileHref}}
    <a
      class="source-file navy underlined truncate"
      target={{navigateTarget}}
      href={{fileHref}}
    >
      <span class="file-name">{{or fileName "–"}}</span>
      {{#one-tooltip class="string-path-tooltip"}}
        <div class="formatted-path-string file-path-base">
          <span class="path">
            {{file-path-renderer pathItems=pathItems}}
          </span>
        </div>
      {{/one-tooltip}}
    </a>
  {{else}}
    <div class="source-file truncate">
      <span class="file-name">{{or fileName "–"}}</span>
      {{#one-tooltip class="string-path-tooltip"}}
        <div class="formatted-path-string file-path-base">
          <span class="path">
            {{file-path-renderer pathItems=pathItems}}
          </span>
        </div>
      {{/one-tooltip}}
    </div>
  {{/if}}
  {{#if fileNameHash}}
    <span class="log-filename-duplicate-hash">{{fileNameHash}}</span>
  {{/if}}
</div>
