{{#truncated-string}}
  <span
    class={{concat-classes
      "inline-icon-container user-info-trigger"
      (if userInfoOpened "not-animation" "animation")
    }}
    {{action
      (mut userInfoOpened)
      (not userInfoOpened)
      bubbles=false
    }}
  >
    {{one-icon icon="user" color=iconColor}}
    {{one-icon icon="browser-info"}}
  </span>
  <span class="user-fullname">{{or user.fullName "â€”"}}</span>
  {{#if user.username}}
    <span class="user-username">
      ({{user.username}})
    </span>
  {{/if}}
  {{user-info-popover
    user=user
    isOpened=userInfoOpened
    triggerSelector=(concat "#" elementId " .user-info-trigger")
  }}
{{/truncated-string}}
