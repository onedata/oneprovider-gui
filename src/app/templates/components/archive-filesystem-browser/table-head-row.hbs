<th class="fb-table-col-files fb-table-secondary-col">
  <span class="header-label">{{tt this "files"}}</span>
  {{#if renderArchiveDipSwitch}}
    {{#bs-button-group
      value=archiveDipMode
      class="archive-dip-selector"
      type="radio"
      onChange=(action "archiveDipModeChanged") as |bg|
    }}
      <div class="btn-group" role="group">
        {{#bg.button
          type="default"
          disabled=(not isArchiveDipAvailable)
          class="btn-sm select-archive-aip-btn"
          value="aip"
        }}
          {{tt this "dipSwitch.aip"}}
        {{/bg.button}}
      </div>
      <div class="btn-group" role="group">
        {{#bg.button
          type="default"
          disabled=(not isArchiveDipAvailable)
          class="btn-sm select-archive-dip-btn"
          value="dip"
        }}
          {{tt this "dipSwitch.dip"}}
        {{/bg.button}}
      </div>
    {{/bs-button-group}}
  {{/if}}
</th>
<th class="fb-table-col-size fb-table-secondary-col hidden-xs">{{tt this "size"}}</th>
<th class="fb-table-col-modification fb-table-secondary-col hidden-xs">
  {{tt this "modification"}}
</th>